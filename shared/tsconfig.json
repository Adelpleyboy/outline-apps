{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["src"]
}
