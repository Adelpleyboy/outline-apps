{
  "files": ["build/electron", "www", "src/electron/resources/tray", "!node_modules/electron"],
  "asarUnpack": ["third_party", "tools"],
  "artifactName": "Outline-Client.${ext}",
  "directories": {
    "output": "build/dist"
  },
  "linux": {
    "target": ["AppImage"],
    "files": [
      "src/electron/linux/resources",
      "third_party/outline-go-tun2socks/linux",
      "src/electron/linux/tools/outline_proxy_controller/dist"
    ],
    "icon": "src/electron/linux/resources",
    "category": "Network"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": "ia32"
      }
    ],
    "files": ["third_party/outline-go-tun2socks/win32"],
    "icon": "src/electron/windows/resources/icon.ico",
    "sign": "src/electron/windows/tools/digicert_usb/plugin.cjs"
  },
  "nsis": {
    "perMachine": true,
    "include": "src/electron/custom_install_steps.nsh"
  }
}
